<?xml version="1.0" encoding="utf-8" standalone="no"?>
<resources>

    <style name="Widget.FiioK9Control.CardView.Elevated" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.FiioK9Control.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.FiioK9Control.Slider" parent="Widget.Material3.Slider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:stepSize">1</item>
        <item name="labelBehavior">gone</item>
    </style>
</resources>
